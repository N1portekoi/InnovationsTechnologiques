<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.condorcet.stablum.innovationstechnologiques">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/titleApplication"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Controller_Connection">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Controller_Register"
            android:label="@string/titleRegister"
            android:parentActivityName=".Controller_Connection" >
        </activity>

        <activity android:name=".Controller_Menu"
            android:label="@string/titleMenu" >
        </activity>

        <activity android:name=".Controller_Score"
            android:label="@string/titleScore"
            android:parentActivityName=".Controller_Menu" >
        </activity>

        <activity android:name=".Controller_Top10"
            android:label="@string/titleTop10"
            android:parentActivityName=".Controller_Menu" >
        </activity>

        <activity android:name=".Controller_Games"
            android:label="@string/titleGames"
            android:parentActivityName=".Controller_Menu" >
        </activity>

        <activity android:name=".Controller_Users"
            android:label="@string/titleUsers"
            android:parentActivityName=".Controller_Menu" >
        </activity>

    </application>

</manifest>